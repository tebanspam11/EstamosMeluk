{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "tests/**/*.ts",
    "Backend/src/**/*.ts",
    "Backend/src/controllers/pdfController.js",
    "Backend/src/routes/pdfRoutes.js",
    "Backend/src/middlewares/multerPdf.js",
    "Backend/src/prisma/client.js"
  ],
  "exclude": ["node_modules", "dist"]
}
