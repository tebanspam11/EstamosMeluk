{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "include": [
    "tests/**/*.ts",
    "Backend/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
